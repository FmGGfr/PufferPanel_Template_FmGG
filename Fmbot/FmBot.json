{
    "type": "generic",
    "display": "Red Discord Bot",
    "icon": "discord",
    "data": {
        "instance_name": {
            "type": "string",
            "value": "",
            "display": "Instance Name",
            "desc": "Enter the unique name of your bot instance (example: FmBot). This defines the data folder name for your bot.",
            "required": true,
            "userEdit": true
        },
        "prefix": {
            "type": "string",
            "value": "!",
            "display": "Main Prefix",
            "desc": "Primary prefix used to call your bot commands (example: !help).",
            "required": true,
            "userEdit": true
        },
        "prefix2": {
            "type": "string",
            "value": "",
            "display": "Secondary Prefix",
            "desc": "Optional secondary prefix (example: $). Leave empty if not needed.",
            "required": false,
            "userEdit": true
        },
        "prefix3": {
            "type": "string",
            "value": "",
            "display": "Tertiary Prefix",
            "desc": "Optional third prefix (example: ?). Leave empty if not needed.",
            "required": false,
            "userEdit": true
        },
        "token": {
            "type": "string",
            "value": "",
            "display": "Discord Bot Token",
            "desc": "Your botâ€™s secret token. You can find it on https://discord.com/developers/applications > Bot > Token. Keep it private.",
            "required": true,
            "userEdit": true
        }
    },
    "install": [
        {
            "type": "command",
            "commands": [
                "python3 -m venv venv",
                "bash -c 'source venv/bin/activate && pip install -U pip setuptools wheel Red-DiscordBot'",
                "mkdir -p ${instance_name}",
                "bash -c 'source venv/bin/activate && redbot-setup --no-prompt --instance-name ${instance_name} --data-path ${instance_name} --backend json'",
                "bash -c 'echo \"TOKEN=${token}\" > .env'"
            ]
        }
    ],
    "uninstall": [
        {
            "type": "command",
            "commands": [
                "rm -rf venv ${instance_name} .env"
            ]
        }
    ],
    "run": {
        "command": "bash -c 'source venv/bin/activate && source .env && redbot ${instance_name} --token \"$TOKEN\" --prefix \"${prefix}\" --prefix \"${prefix2}\" --prefix \"${prefix3}\"'",
        "stopCode": 9,
        "stdin": {
            "type": "stdin"
        },
        "autostart": false,
        "autorecover": false,
        "autorestart": false
    },
    "environment": {
        "type": "host"
    },
    "supportedEnvironments": [
        {
            "type": "host"
        }
    ],
    "requirements": {
        "binaries": [
            "python3",
            "pip3",
            "git"
        ]
    },
    "stats": {
        "type": "",
        "desc": "No monitoring stats are collected by default."
    },
    "query": {
        "type": "",
        "desc": "No query integration required."
    },
    "keepAlive": {
        "frequency": "",
        "command": ""
    },
    "name": "RedDiscordBot"
}
